        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoNomina2019"
        mc:Ignorable="d"
        Title="Asignar_turnos" Height="474.8" Width="1082.8" Loaded="Window_Loaded">
