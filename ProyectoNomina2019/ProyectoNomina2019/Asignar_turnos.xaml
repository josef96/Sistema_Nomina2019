            <DataGrid Name="dgEmpleados" Canvas.Left="14" Canvas.Top="71" Width="536" Margin="0,0,0,10"/>
        </GroupBox>

        <GroupBox FontSize="20" Header="Turnos existentes" Canvas.Top="10" Width="446" Canvas.Left="608" Height="336">
            <DataGrid Name="dgTurnos" Canvas.Left="14" Canvas.Top="496" Width="415" Margin="0,0,0,8"/>
        </GroupBox>

        <Button Name="btnAsignarTurno" Click="BtnAsignarTurno_Click" Content="Asignar turno" Canvas.Left="608" Canvas.Top="373" Width="165" Height="58"/>
        <Button Name="btnSalir" Click="BtnSalir_Click" Content="Salir" Canvas.Left="941" Canvas.Top="373" Width="113" Height="62"/>



    </Canvas>
</Window>
