        <GroupBox FontSize="20" Header="Empleados existentes" Canvas.Left="10" Canvas.Top="10" Width="566">
            <DataGrid Name="dgEmpleados" Height="208" Canvas.Left="10" Canvas.Top="78" Width="536" Margin="9,0"/>
        </GroupBox>

        <TextBox Name="txtNuevoSalario" Height="22" Canvas.Left="156" TextWrapping="Wrap" Text="" Canvas.Top="289" Width="156"/>
        <Label Content="Introduzca nuevo salario: " Canvas.Left="10" Canvas.Top="289" Width="158"/>
        <Label Content="(El monto debe ser mayor al actual salario)" Canvas.Left="332" Canvas.Top="289" RenderTransformOrigin="0.105,0.192" Width="244" Foreground="#DDFF0505"/>
        <Button Name="btnActualizarSalario" Click="BtnActualizarSalario_Click" Content="Actualizar salario" Canvas.Left="208" Canvas.Top="333" Width="174" Height="53"/>
        <Button Name="btnSalir" Click="BtnSalir_Click" Content="Salir" Canvas.Left="461" Canvas.Top="333" Width="115" Height="53"/>

    </Canvas>
</Window>
